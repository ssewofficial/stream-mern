{
  "$schema": "https://json.schemastore.org/nodemon",
  "watch": ["src"],
  "ext": "ts,js,json,tsx",
  "ignore": ["dist", "node_modules", ".git", ".env", ".env.*"],
  "execMap": {
    "js": "node",
    "ts": "node --trace-warnings --trace-deprecation --loader ts-node/esm"
  },
  "verbose": true,
  "delay": "500ms",
  "colors": true,
  "exitcrash": true,
  "runOnChangeOnly": false,
  "restartable": "rs",
  "stdin": true
}
